	<!-- 每1分钟运行 -->
	<bean id="runByTenMinuteTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<bean
				class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
				<property name="targetObject" ref="mySchedule" />
				<property name="targetMethod" value="runByTenMinute" />
				<!-- <property name="concurrent" value="fasle" /> -->
			</bean>
		</property>
		<property name="cronExpression">
			<value>0 29 9 * * ?</value><!-- 0 */10 * * * ? -->
		</property>
		<!-- <property name="startDelay">
			<value>1</value>
		</property> -->
	</bean>

